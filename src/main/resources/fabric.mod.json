{
  "schemaVersion": 1,
  "id": "randomite",
  "version": "${version}",

  "name": "Randomite",
  "description": "Adds in a new ore that gives out random items.",
  "authors": [
    "LukeisStuff"
  ],

  "contact": {
    "homepage": "",
    "sources": ""
  },

  "icon": "icon.png",
  "license": "CC0-1.0",
  "environment": "*",

  "entrypoints": {
    "main": [
      "luke.randomite.RandomiteMod"
